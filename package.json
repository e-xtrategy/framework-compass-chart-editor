{
  "name": "make-up-your-mind",
  "version": "0.6.0",
  "repository": {
    "type": "git",
    "url": "https://github.com:e-xtrategy/framework-compass-chart-editor.git"
  },
  "scripts": {
    "build": "webpack --config ./webpack.config.prod.js",
    "start": "webpack-dev-server --config ./webpack.config.dev.js",
    "test": "jest",
    "sync-version": "node ./scripts/syncVersion.js",
    "predeploy": "npm run build",
    "deploy": "now --public --name make-up-your-mind ./dist"
  },
  "license": "MIT",
  "dependencies": {
    "@webcomponents/custom-elements": "1.1.0",
    "firebase": "5.0.4",
    "lodash.get": "4.4.2",
    "lodash.shuffle": "4.2.0",
    "lodash.sortby": "4.7.0",
    "uuid": "3.2.1"
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-jest": "22.4.3",
    "babel-loader": "7.1.2",
    "babel-plugin-transform-custom-element-classes": "0.1.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.6.1",
    "copy-webpack-plugin": "4.5.1",
    "css-loader": "0.28.11",
    "eslint": "4.19.1",
    "eslint-config-standard": "11.0.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-node": "6.0.1",
    "eslint-plugin-promise": "3.7.0",
    "eslint-plugin-standard": "3.1.0",
    "file-loader": "0.11.2",
    "html-loader": "0.5.1",
    "html-webpack-plugin": "3.2.0",
    "husky": "1.0.0-rc.1",
    "jest": "22.4.3",
    "lint-staged": "7.0.4",
    "mini-css-extract-plugin": "0.4.0",
    "node-sass": "7.0.0",
    "now": "11.3.8",
    "prettier": "1.12.0",
    "sass-loader": "7.0.2",
    "style-loader": "0.21.0",
    "url-loader": "1.0.1",
    "webpack": "4.5.0",
    "webpack-cli": "2.0.14",
    "webpack-dev-server": "3.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run sync-version && git add sw.js && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^radar(.*)$": "<rootDir>/apps/radar$1",
      "^lib(.*)$": "<rootDir>/lib$1"
    },
    "globals": {
      "FIREBASE_APP_KEY": "blah"
    }
  }
}
